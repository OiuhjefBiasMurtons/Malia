# Database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
#USER: your_username
#Pass: your_password

# Twilio
TWILIO_ACCOUNT_SID='your_twilio_account_sid'
TWILIO_AUTH_TOKEN='your_twilio_auth_token'
TWILIO_PHONE_NUMBER='+1234567890'  # Número de SMS de Twilio
TWILIO_SMS_NUMBER='+1234567890'  # Número de SMS de Twilio
TWILIO_WHATSAPP_NUMBER='+1234567890'  # Número WhatsApp Business validado

# Configuración de OpenAI
OPENAI_API_KEY='your_openai_api_key'

# REDIS
REDIS_URL=redis://localhost:6379/0

# App
SECRET_KEY='your_secret_key_here'
DEBUG=True
DISABLE_WEBHOOK_VALIDATION=False

# Ngrok (for development)
NGROK_URL=https://your-ngrok-url.ngrok-free.app/

# Sentry (opcional para monitoreo en producción)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project 

# === OPTIMIZACIONES DE RENDIMIENTO ===
# Configuraciones opcionales para mejorar rendimiento

# Pool de conexiones de base de datos (ya configurado automáticamente)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# Caché de conversaciones
CONVERSATION_CACHE_TTL=1800  # 30 minutos en segundos
CLEANUP_INTERVAL=3600        # 1 hora en segundos

# Logging
LOG_LEVEL=INFO
